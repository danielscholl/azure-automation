{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "my",
      "minLength": 2,
      "maxLength": 5
    },
    "_templateUrl": {
      "type": "string",
      "metadata": {
        "description": "Location of Nested Templates"
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name for the Domain Controller VM."
      },
      "defaultValue": "ad"
    },
    "vmSuffix": {
      "type": "string",
      "metadata": {
        "description": "The suffix that will be used for the vm name"
      },
      "defaultValue": "01"
    },
    "vnet": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing VNET"
      }
    },
    "vnetGroup": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing VNET resource group"
      }
    },
    "subnet": {
      "type": "string",
      "metadata": {
        "description": "Name of the subnet in the virtual network you want to use"
      }
    },
    "keyVault": {
      "type": "string",
      "metadata": {
        "description": "Name of the Key Vault that holds Credential Information"
      }
    },
    "keyVaultGroup": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing KeyVault Resource Group"
      }
    },
    "diagStorage": {
      "type": "string",
      "metadata": {
        "description": "Storage Account Name for Diagnostic Logs"
      }
    },
    "dscPullServerKey": {
      "type": "string",
      "metadata": {
        "description": "Registration key to use to onboard to the Azure Automation DSC pull/reporting server"
      }
    },
    "dscPullServerUrl": {
      "type": "string",
      "metadata": {
        "description": "Registration url of the Azure Automation DSC pull/reporting server"
      }
    },
    "dscNodeConfiguration": {
      "type": "string",
      "metadata": {
        "description": "DSC Node Configuration"
      },
      "allowedValues": [
        "DomainController"
      ],
      "defaultValue": "DomainController"
    },
    "domainType": {
      "type": "string",
      "metadata": {
        "description": "Is it the first domain controller (new domain/forest) or will you be adding one?"
      },
      "allowedValues": [
        "FirstDC",
        "AdditionalDC"
      ],
      "defaultValue": "AdditionalDC"
    }
  },
  "variables": {
    "KeyVaultId": "[resourceId(parameters('keyVaultGroup'), 'Microsoft.KeyVault/vaults', parameters('keyVault'))]",
    "vmFullName": "[concat(parameters('prefix'), '-', parameters('vmName'), '-', parameters('vmSuffix'))]",
    "DomainController": "[concat(parameters('dscNodeConfiguration'), '.', parameters('domainType'))]"
  },
  "resources": [
    {
      "name": "TemplateADServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_templateUrl'), 'deploySingleVMDataDisk.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnet": {
            "value": "[parameters('vnet')]"
          },
          "vnetGroup": {
            "value": "[parameters('vnetGroup')]"
          },
          "subnet": {
            "value": "[parameters('subnet')]"
          },
          "vmName": {
            "value": "[variables('vmFullName')]"
          },
          "adminUserName": {
            "reference": {
              "keyVault": {
                "id": "[variables('KeyVaultId')]"
              },
              "secretName": "adminUserName"
            }
          },
          "adminPassword": {
            "reference": {
              "keyVault": {
                "id": "[variables('KeyVaultId')]"
              },
              "secretName": "adminPassword"
            }
          },
          "storageName": {
            "value": "[parameters('diagStorage')]"
          },
          "storageKey": {
            "reference": {
              "keyVault": {
                "id": "[variables('KeyVaultId')]"
              },
              "secretName": "diagStorageKey"
            }
          }
        }
      }
    },
    {
      "name": "templateDSCExtension",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "TemplateADServer"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_templateUrl'), 'deployDSCExtension.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('vmFullName')]"
          },
          "registrationKey": {
            "value": "[parameters('dscPullServerKey')]"
          },
          "registrationUrl": {
            "value": "[parameters('dscPullServerUrl')]"
          },
          "nodeConfigurationName": {
            "value": "[variables('DomainController')]"
          }
        }
      }
    }
  ]
}
