{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "my",
      "minLength": 2,
      "maxLength": 5
    },
    "_templateUrl": {
      "type": "string",
      "metadata": {
        "description": "Location of Nested Templates"
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name for the Domain Controller VM."
      },
      "defaultValue": "jumpbox"
    },
    "vnet": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing VNET"
      }
    },
    "vnetGroup": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing VNET resource group"
      }
    },
    "subnet": {
      "type": "string",
      "metadata": {
        "description": "Name of the subnet in the virtual network you want to use"
      }
    },
    "keyVault": {
      "type": "string",
      "metadata": {
        "description": "Name of the Key Vault that holds Credential Information"
      }
    },
    "keyVaultGroup": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing KeyVault Resource Group"
      }
    },
    "diagStorage": {
      "type": "string",
      "metadata": {
        "description": "Storage Account Name for Diagnostic Logs"
      }
    },
    "remoteAccessACL": {
      "type": "string",
      "metadata": {
        "description": "Remote Access CIDR"
      },
      "defaultValue": "Internet"
    }
  },
  "variables": {
    "KeyVaultId": "[resourceId(parameters('keyVaultGroup'), 'Microsoft.KeyVault/vaults', parameters('keyVault'))]",
    "vmFullName": "[concat(parameters('prefix'), '-', parameters('vmName'))]"
  },
  "resources": [
    {
      "name": "TemplateJumpServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_templateUrl'), 'deployJumpServer.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnet": {
            "value": "[parameters('vnet')]"
          },
          "vnetGroup": {
            "value": "[parameters('vnetGroup')]"
          },
          "subnet": {
            "value": "[parameters('subnet')]"
          },
          "vmName": {
            "value": "[variables('vmFullName')]"
          },
          "remoteAccessACL": {
            "value": "[parameters('remoteAccessACL')]"
          },
          "adminUserName": {
            "reference": {
              "keyVault": {
                "id": "[variables('KeyVaultId')]"
              },
              "secretName": "adminUserName"
            }
          },
          "adminPassword": {
            "reference": {
              "keyVault": {
                "id": "[variables('KeyVaultId')]"
              },
              "secretName": "adminPassword"
            }
          },
          "storageName": {
            "value": "[parameters('diagStorage')]"
          },
          "storageKey": {
            "reference": {
              "keyVault": {
                "id": "[variables('KeyVaultId')]"
              },
              "secretName": "diagStorageKey"
            }
          }
        }
      }
    }
  ]
}
